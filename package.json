{
  "private": true,
  "engines": {
    "node": "^6.10.0"
  },
  "scripts": {
    "build-docs": "batch-showdown docs public/docs",
    "copy-docs-index": "ncp docs/index.html public/docs/index.html",
    "copy-docs-css": "ncp docs/github-markdown.css public/docs/github-markdown.css",
    "docs": "npm-run-all build-docs copy-docs-index copy-docs-css",
    "watch-css": "node-sass -w resources/assets/sass/app.scss public/css/app.css",
    "watch-js": "cross-env NODE_ENV=development watchify -vd -p browserify-hmr -g envify -e resources/assets/js/app.js -o public/js/app.js",
    "build-css": "node-sass resources/assets/sass/app.scss public/css/app.css",
    "build-js": "cross-env NODE_ENV=production browserify -g envify -e resources/assets/js/app.js | uglifyjs --compress warnings=false --mangle -o public/js/app.js",
    "create-folders": "mkdirp public/css/themes/default/, public/js, public/docs",
    "copy-css": "ncp node_modules/semantic-ui-css/semantic.min.css public/css/semantic.min.css",
    "copy-assets": "ncp node_modules/semantic-ui-css/themes/default public/css/themes/default",
    "watch": "npm-run-all --parallel watch-css watch-js",
    "build": "npm-run-all --parallel build-css build-js",
    "setup": "npm-run-all create-folders copy-assets copy-css build docs",
    "heroku-prebuild": "mkdir public/js -p ; mkdir public/docs -p",
    "install": "npm run setup"
  },
  "browserify": {
    "transform": [
      "vueify"
    ]
  },
  "dependencies": {
    "babel-core": "^6.17.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.16.0",
    "batch-showdown": "^1.0.20",
    "browserify": "^13.1.1",
    "browserify-hmr": "^0.3.5",
    "coffee-script": "^1.11.1",
    "cross-env": "^3.1.3",
    "envify": "^3.4.1",
    "jquery": "^3.1.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.15.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.10.1",
    "npm-run-all": "^3.1.1",
    "pug": "^2.0.0-beta6",
    "semantic-ui-calendar": "0.0.6",
    "semantic-ui-css": "^2.2.4",
    "uglify-js": "^2.7.5",
    "vue": "^2.0.1",
    "vue-resource": "^0.9.3",
    "vue-router": "^2.0.0",
    "vueify": "^9.2.4",
    "watchify": "^3.7.0"
  }
}
