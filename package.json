{
  "private": true,
  "scripts": {
    "prod": "gulp --production",
    "dev": "gulp watch",
    "watch-css": "node-sass -w resources/assets/sass/app.scss public/css/app.css",
    "watch-js": "watchify -vd -p browserify-hmr -e resources/assets/js/app.js -o public/js/app.js",
    "build-css": "node-sass resources/assets/sass/app.scss public/css/app.css",
    "build-js": "cross-env NODE_ENV=production browserify -g envify -e resources/assets/js/app.js -o public/js/app.js",
    "create-folders": "mkdirp public/css/themes/default/, public/js",
    "copy-assets": "ncp semantic/dist/themes/default public/css/themes/default",
    "watch": "npm-run-all --parallel watch-css watch-js",
    "build": "npm-run-all --parallel build-css build-js create-folders copy-assets"
  },
  "browserify": {
    "transform": [
      "vueify"
    ]
  },
  "dependencies": {
    "babel-core": "^6.17.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.16.0",
    "browserify": "^13.1.1",
    "browserify-hmr": "^0.3.5",
    "coffee-script": "^1.11.1",
    "cross-env": "^3.1.3",
    "envify": "^3.4.1",
    "jquery": "^3.1.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.15.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.10.1",
    "npm-run-all": "^3.1.1",
    "pug": "^2.0.0-beta6",
    "semantic-ui": "^2.2.6",
    "sweetalert": "^1.1.3",
    "vue": "^2.0.1",
    "vue-resource": "^0.9.3",
    "vue-router": "^2.0.0",
    "vueify": "^9.2.4",
    "watchify": "^3.7.0"
  }
}
